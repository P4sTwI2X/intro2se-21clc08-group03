generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// example
model Object{
  objectId Int  @default(autoincrement())
  objectName String
  status Boolean
  createdAt DateTime  @default(now())
  updatedAt DateTime @updatedAt
  
  //relation
//  kasjdlaskdfjalsd

  //primary
  @@id([objectId])

  }

// _____USER TABLE_____
model User {
  userId String @unique 
  userName String @unique
  password String
  email String @unique
  home String 
  phone String 
  gender String
  dob DateTime
  bankAccount String 

  status String
  createdAt DateTime  @default(now())
  updatedAt DateTime @updatedAt
  type String
  
  // relation
  userShop Shop[] 
  artical Artical[]
  order Order[]

  //primary key
  @@id([userId])

}


// _____PRODUCT TABLE_____
model Product {
  shopId String
  productId String @unique
  productName String 
  quantity Int @default(0)
  price Float @default(0)
  description String

  status String
  createdAt DateTime  @default(now())
  updatedAt DateTime @updatedAt

  // relation
  shop Shop @relation(fields: [shopId],references: [shopId])
  orderDetail Order_Detail[]

  // primary key
  @@id([productId])
}

// _____SHOP TABLE_____
model Shop {
  userId String
  shopId String @unique
  shopName String
  productQuantity Int @default(0)
  rating Float @default(0)

  status String
  createdAt DateTime  @default(now())
  updatedAt DateTime @updatedAt

  // relation
  user User @relation(fields: [userId],references: [userId])
  product Product[]
  order Order[]

  // primary key
  @@id([shopId])
}

// _____ARTICLE TABLE_____  
model Artical {
  userId String
  articalId String @unique
  title String 
  content String

  status String
  createdAt DateTime  @default(now())
  updatedAt DateTime @updatedAt

  // relation
  user User @relation(fields: [userId],references: [userId])

  // primary key
  @@id([articalId])
}

// _____ORDER TABLE_____
model Order {
  orderId String @unique
  userId String 
  shopId String
  paymentMethod String 
  totalPrice Float @default(0)
  totalProduct Int @default(0)

  status String
  createdAt DateTime  @default(now())
  
  // relation
  user User @relation(fields: [userId], references: [userId])
  shop Shop @relation(fields: [shopId], references: [shopId])
  orderDetail Order_Detail[]

  // primary key
  @@id([orderId])
}

// _____ORDER DETIAL TABLE_____
model Order_Detail {
  orderId String
  productId String
  quantity Int @default(0)
  price Float @default(0)
  
  createdAt DateTime  @default(now())

  // relation
  order Order @relation(fields: [orderId], references: [orderId])
  product Product @relation(fields: [productId], references: [productId])

  //primary key
  @@id([orderId, productId])
}